
<%- include("partials/header"); -%>


<h1><%= Home %></h1>
<p><%= HomeParagraph %></p>

<% makePosts.forEach(function(update){ %>
    <h3>
        <a href="/post/<%= update._id %>" style="text-decoration: none; color: black">

            <%= update.title %>
        </a>
            
    </h3>
    
    <p><%= update.content.slice(0, 50) + " ..." %>
    <a href="/post/<%= update._id %>">Read More</a>
    </p>

    
<% }) %>

<%- include("partials/footer"); -%>